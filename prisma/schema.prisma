// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
  DEVELOPER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PRINTING
  READY
  COMPLETED
}

enum PaymentStatus {
  PAID
  UNPAID
}

// ===== SHOPS (Multi-tenant) =====
model Shop {
  id             String   @id @default(cuid())
  shopName       String
  tagline        String   @default("Print Shop")
  operatingHours String   @default("9:00 AM - 6:00 PM")
  location       String   @default("")
  contact        String   @default("")
  email          String   @default("")
  logo           String?
  primaryColor   String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  users          User[]
  orders         Order[]
  products       Product[]
  dailyStats     DailyStats[]
}

// ===== USERS =====
model User {
  id        String   @id @default(cuid())
  authId    String?  @unique // Supabase Auth ID
  email     String   @unique
  name      String?
  avatar    String?
  role      Role     @default(USER)
  password  String?  // For direct auth
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  shopId    String?
  shop      Shop?    @relation(fields: [shopId], references: [id])
  orders    Order[]
}

// ===== PRODUCTS =====
model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  category    String
  price       Float
  stock       Int
  image       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  shopId      String?
  shop        Shop?    @relation(fields: [shopId], references: [id])
}

// ===== ORDERS (items stored as JSONB — no separate OrderItem table) =====
model Order {
  id            String        @id @default(cuid())
  orderToken    String        @unique @default(cuid())
  totalAmount   Float
  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(UNPAID)
  userEmail     String?
  userName      String?
  items         Json          @default("[]") // JSONB array of cart items
  isDeleted     Boolean       @default(false)
  deletedAt     DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  userId        String?
  user          User?         @relation(fields: [userId], references: [id])
  shopId        String?
  shop          Shop?         @relation(fields: [shopId], references: [id])
}

// ===== INVENTORY (print shop supplies) =====
model Inventory {
  id        String   @id @default(cuid())
  name      String
  stock     Int      @default(0)
  unit      String   @default("pieces")
  threshold Int      @default(10)
  shopId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  logs      StockLog[]
}

// ===== STOCK LOG (audit trail for inventory changes) =====
model StockLog {
  id          String    @id @default(cuid())
  amount      Int       // positive = added, negative = removed
  note        String    @default("")
  createdBy   String    @default("")
  createdAt   DateTime  @default(now())
  
  inventoryId String
  inventory   Inventory @relation(fields: [inventoryId], references: [id], onDelete: Cascade)
}

// ===== DAILY STATS (persisted analytics — survives order deletion) =====
model DailyStats {
  id              String   @id @default(cuid())
  date            DateTime @unique @db.Date
  revenue         Float    @default(0)
  orderCount      Int      @default(0)
  printJobs       Int      @default(0)
  productSales    Int      @default(0)
  avgOrderValue   Float    @default(0)
  uniqueCustomers Int      @default(0)
  bwPages         Int      @default(0)
  colorPages      Int      @default(0)
  shopId          String?
  shop            Shop?    @relation(fields: [shopId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
